@model EmployeeManagementApp.ViewModels.EmployeeCreateViewModel
@{
    ViewBag.Title = "All Employee";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <select class="form-control" asp-for="Department" asp-items="Html.GetEnumSelectList<EmployeeManagementApp.Models.Dept>()">
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <div class="custom-file">
            <input class="form-control custom-file-input" asp-for="Photo" />
            <label class="custom-file-label">Choose File....</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit">Register</button>
    </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
